{
  "manifest_version": 3,
  "name": "YouTube Recommendations Hider",
  "version": "1.1",
  "description": "Hide recommended videos on YouTube.",
  "icons": {
    "16": "icon16.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  }
}
